<h2>Cards to remove</h2>
<hr>
<% if (cardsOnDeck.cards.length <=0) { %>
    <h4>Deck is empty</h4>

    <% } else {%>

        <% cardsOnDeck.cards.forEach(element=> { %>
            <form action="/decks/<%= deckId%>/remove" method="post" style="display: inline; position: relative;">
                <button><img src="<%= element.image %>" /></button>
                <input hidden value="<%=element.id%>" name="cardId">
            </form>
            <% }) %>

